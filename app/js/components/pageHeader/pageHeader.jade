section.page-header(ng-transclude)
  .page-title
    h1
      i.fa(class="{{:: icon}}", aria-hidden='true')
      span.text(translate) {{:: titleTranslated}}
    a(ng-if="link.length > 0", href="{{:: link}}", target="_blank")
      i.fa.fa-external-link
  //- subtitle is an array
  .page-subtitle
    span.text(ng-repeat="subtitle_part in subtitle", translate) {{:: subtitle_part }}
