.actions-page.actions-back
  actions-breadcrumbs(ng-hide="loading")

  //- section.rule-detail-header
  //-   page-header(ng-if='!loading', title="{{topic.title}}", icon="fa-file-text")
  //-   topic-details(ng-hide='loading', topic='topic') 

  section.rule-detail-header
    page-header(icon="fa-file-text") 
      .page-title 
        h1 {{::topic.title}}
    .rule-detail-summary(ng-hide='loading')
      h4(ng-if='isIncident(ruleDetails.rule_id)')
      article(ng-bind-html='ruleDetails.generic_html | trust_html')
      .topic-content(ng-if='topic.content_html', ng-bind-html="topic.content_html")


  //- topic-rule-filters(ng-hide='loading')
  .table-filters
    incidents-tri-state(ng-if='isBeta').filter-group
    total-risk-select.filter-group
    risk-of-change-select.filter-group

  section.content
    .table-utilities
      search-box(placeholder="{{'Search rules' | translate}}", on-search='search.doFilter(model)')
      list-type

    topic-rule-list(ng-if='!loading', topic='topic')

  // Spinner
  .margin-top.text-center(ng-show="loading")
    .spinner.spinner-lg
